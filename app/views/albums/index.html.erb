<h1>Listing albums</h1>

<table>
  <tr>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <% if can? :read, album then %>
  <tr>
    <td><%= link_to album.name, album %></td>
  </tr>
  <% end %>
<% end %>
</table>

<br />
<% if can? :create, Album then %>
  <%= link_to 'New Album', new_album_path %>
<% end %>
